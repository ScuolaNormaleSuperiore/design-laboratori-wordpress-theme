name: Assets update

on:
  schedule:
    - cron:  '30 18 * * *'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
        with:
          fetch-depth: 0
      - name: Setup NodeJS
        uses: actions/setup-node@v3
        with:
          node-version: 16
      - name: Setup Git
        uses: fregante/setup-git-user@v1
      - name: Run assets update
        run: | 
          git clone https://github.com/italia/design-laboratori-pagine-statiche
          cd design-laboratori-pagine-statiche && npm i && npm run build && cd ..
          cp ./design-laboratori-pagine-statiche/dist/assets/css/laboratori.css ./assets/css/laboratori.css
          cp ./design-laboratori-pagine-statiche/dist/assets/js/laboratori.js ./assets/js/laboratori.js
          rm -rf design-laboratori-pagine-statiche
          git add assets/css/laboratori.css assets/js/laboratori.js
          git commit -m "chore(deps): update assets"
      - name: Create Pull Request
        uses: peter-evans/create-pull-request@v3
        with:
          title: "chore(deps) update laboratori.css"
          branch: feature/update-scuole-css